<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="keyboard"
            type="com.app.rapidnumberconverter.common.Keyboard" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="B"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_layout">

            <Button
                android:id="@+id/button_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="D"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_layout">

            <Button
                android:id="@+id/button_mult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="E"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_devide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_seven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_nine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_layout"
            tools:layout_editor_absoluteY="168dp">

            <Button
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_mod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DL"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_zero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_plus_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_equal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_layout"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/third_layout">

            <Button
                android:layout_weight="2"
                android:id="@+id/button_and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AND"
                android:textSize="12sp" />

            <Button
                android:layout_weight="2"
                android:layout_marginStart="4dp"
                android:id="@+id/button_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOT"
                android:textSize="12sp" />

            <Button
                android:layout_weight="2"
                android:layout_marginStart="4dp"
                android:id="@+id/button_xor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XOR"
                android:textSize="12sp" />

            <Button
                android:layout_weight="2"
                android:id="@+id/button_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="OR"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_layout"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fourth_layout">

            <Button
                android:layout_weight="2"
                android:id="@+id/button_left_shit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LSL"
                android:textSize="12sp" />

            <Button
                android:layout_weight="2"
                android:layout_marginStart="4dp"
                android:id="@+id/button_right_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LSR"
                android:textSize="12sp" />

            <Button
                android:layout_weight="2"
                android:layout_marginStart="4dp"
                android:id="@+id/button_asr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASR"
                android:textSize="12sp" />

            <Button
                android:layout_weight="2"
                android:id="@+id/button_ror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ROR"
                android:textSize="12sp" />
<!--            style="?android:attr/buttonBarButtonStyle"-->
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>