<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.app.rapidnumberconverter.ui.converter.ConverterViewModel" />

        <variable
            name="conversionContext"
            type="com.app.rapidnumberconverter.common.ConversionContext" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/settings_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e2e4e6"
            android:paddingBottom="@dimen/dp_standard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
<!--
            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_half"
                android:layout_marginTop="@dimen/dp_one_and_half"
                android:layout_marginEnd="@dimen/dp_half"
                android:text="@string/numbers_converter_heading"
                android:textAlignment="center"
                android:textSize="@dimen/sp_one_and_quarter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Numbers converter" />

            <include
                android:id="@+id/view_from_picker"
                layout="@layout/view_number_system_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_standard"
                android:layout_marginTop="@dimen/dp_double"
                android:layout_marginEnd="@dimen/dp_standard"
                android:onClick="@{() -> viewModel.showMenuItem(conversionContext.CONVERT_FROM)}"
                app:iconRes="@{@drawable/ic_baseline_keyboard_arrow_down_24}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                app:title="@{@string/system_picker_title_from}" />

            <TextView
                android:id="@+id/text_view_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_standard"
                android:layout_marginEnd="@dimen/dp_standard"
                android:text="@{viewModel.fromNumberSystem}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_from_picker"
                tools:text="Binary" />

            <include
                android:id="@+id/view_number_input"
                layout="@layout/item_number_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_standard"
                android:layout_marginTop="@dimen/dp_one_and_half"
                android:layout_marginEnd="@dimen/dp_standard"
                app:clickListener="@{viewModel}"
                app:inputValue="@={viewModel.convertingValue}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_to"
                app:numberSystem="@{viewModel.fromNumberSystem}" />

            <include
                android:id="@+id/view_to_picker"
                layout="@layout/view_number_system_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_one_and_half"
                android:onClick="@{() -> viewModel.showMenuItem(conversionContext.CONVERT_TO)}"
                app:iconRes="@{@drawable/ic_baseline_keyboard_arrow_down_24}"
                app:layout_constraintStart_toStartOf="@+id/view_from_picker"
                app:layout_constraintTop_toBottomOf="@+id/text_view_from"
                app:title="@{@string/system_picker_title_to}" />

            <TextView
                android:id="@+id/text_view_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_standard"
                android:layout_marginEnd="@dimen/dp_standard"
                android:text="@{viewModel.toNumberSystem}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_to_picker"
                tools:text="Binary" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_standard"
                android:layout_marginTop="@dimen/dp_one_and_half"
                android:layout_marginEnd="@dimen/dp_standard"
                android:onClick="@{() -> viewModel.convert()}"
                android:text="@string/button_convert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_number_input" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
